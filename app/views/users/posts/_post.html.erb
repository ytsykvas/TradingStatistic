<div id="<%= dom_id post %>">
  <h1 class="mt-3">
    <%= post.post_title%>
  </h1>

  <p>
    <%= post.post_text %>
  </p>

  <p>
    <strong><%= link_to "@" + User.find(post.user_id).nickname, user_path(@user) %></strong>
    (<%= l(post.created_at, format: :short) %>)
    <% if post.created_at != post.updated_at %>
      <strong>*ред </strong>
    <% end %>
  </p>
</div>
