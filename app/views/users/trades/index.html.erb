<p style="color: green"><%= notice %></p>

<h1>Трейди:</h1>

<div id="trades">
  <% @trades.each do |trade| %>
    <%= render trade %>
    <p>
      <%= link_to "Show this trade", user_trade_path(current_user, trade), class: 'btn btn-dark mt-3' %>
    </p>
  <% end %>
</div>

<%= link_to "New trade", new_user_trade_path, class: 'btn btn-success mt-3' %>