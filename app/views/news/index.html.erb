<h1>Пошук новин про компанію:</h1>

<%= form_with(url: search_path, method: 'post', local: true) do %>
  <div class="form-group mt-3">
    <%= label_tag :ticker, 'Введіть тікер'%>
    <%= text_field_tag :ticker, nil, placeholder: 'Eg. AAPL / MSFT / AMZN', class: 'form-control mt-3' %>
  </div>

  <%= button_tag 'Пошук', class: 'btn btn-success btn-block mt-3' %>
  
<% end %>