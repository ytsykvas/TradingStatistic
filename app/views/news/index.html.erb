<h1>Пошук інформації про компанію:</h1>

<%= form_with(url: search_path, method: 'post', local: true) do %>
  <div class="form-group mt-3">
    <%= label_tag :word, 'Введіть слово'%>
    <%= text_field_tag :word, nil, placeholder: 'Eg. AAPL / MSFT / AMZN', class: 'form-control mt-3' %>
  </div>
  <%= button_tag 'Пошук', class: 'btn btn-success btn-block mt-3' %>
<% end %>